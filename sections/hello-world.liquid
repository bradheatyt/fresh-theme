<section>
  {% if section.settings.heading != blank %}
    <h1>{{ section.settings.heading }}</h1>
  {% else %}
    <h1>Hello, world!</h1>
  {% endif %}
</section>

{% schema %}
{
  "name": "Hello World",
  "tag": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    }
  ],
  "presets": [
    {
      "name": "Hello World"
    }
  ]
}
{% endschema %}
