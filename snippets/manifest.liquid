{% liquid
  assign color_scheme_default = blank

  for scheme in settings.color_schemes
    if forloop.index0 == 0
      assign color_scheme_default = scheme
    endif
  endfor
%}

{% capture manifest %}
{
  "name": "{{ shop.name }}",
  "short_name": "{{ shop.name }}",
  "description": {{ shop.description | json }},
  "categories": ["shopping"],
  "theme_color": "{{ color_scheme_default.settings.[settings.pwa_theme_color_source] | color_to_hsl }}",
  "background_color": "{{ color_scheme_default.settings.background | color_to_hsl }}",
  "display": "standalone",
  "orientation": "any",
  "dir": "auto",
  {%- if shop.brand.square_logo != blank %}
  "icons": [
    {
      "src": {{ shop.brand.square_logo | image_url: width: 48, height: 48 | prepend: 'https:' | json }},
      "sizes": "48x48",
      "purpose": "any"
    },
    {
      "src": {{ shop.brand.square_logo | image_url: width: 72, height: 72 | prepend: 'https:' | json }},
      "sizes": "72x72",
      "purpose": "any"
    },
    {
      "src": {{ shop.brand.square_logo | image_url: width: 96, height: 96 | prepend: 'https:' | json }},
      "sizes": "96x96",
      "purpose": "any"
    },
    {
      "src": {{ shop.brand.square_logo | image_url: width: 144, height: 144 | prepend: 'https:' | json }},
      "sizes": "144x144",
      "purpose": "any"
    },
    {
      "src": {{ shop.brand.square_logo | image_url: width: 168, height: 168 | prepend: 'https:' | json }},
      "sizes": "168x168",
      "purpose": "any"
    },
    {
      "src": {{ shop.brand.square_logo | image_url: width: 192, height: 192 | prepend: 'https:' | json }},
      "sizes": "192x192",
      "purpose": "any"
    },
    {
      "src": {{ shop.brand.square_logo | image_url: width: 256, height: 256 | prepend: 'https:' | json }},
      "sizes": "256x256",
      "purpose": "any"
    },
    {
      "src": {{ shop.brand.square_logo | image_url: width: 512, height: 512 | prepend: 'https:' | json }},
      "sizes": "512x512",
      "purpose": "any"
    }
  ],
  {% endif -%}
  "start_url": "\/?utm_source=pwa",
  "scope": "/",
  "id": "\/?utm_source=pwa"
}
{% endcapture %}

{% # theme-check-disable RemoteAsset %}
<link rel="manifest" href='data:application/manifest+json,{{- manifest -}}' />
{% # theme-check-enable RemoteAsset %}
