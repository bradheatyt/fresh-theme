[
  {
    "name": "theme_info",
    "theme_name": "Fresh",
    "theme_version": "0.0",
    "theme_author": "Josh Corbett",
    "theme_documentation_url": "https:\/\/github.com\/joshistoast\/fresh-theme",
    "theme_support_email": "josh@flagnorfail.com"
  },
  {
    "name": "Application",
    "settings": [
      {
        "type": "checkbox",
        "id": "enable_pwa_mode",
        "label": "Enable PWA Mode",
        "info": "This will enable the PWA mode for the theme.",
        "default": true
      },
      {
        "type": "text",
        "id": "pwa_name",
        "label": "PWA Name",
        "default": "Fresh Theme"
      },
      {
        "type": "textarea",
        "id": "pwa_description",
        "label": "PWA Description",
        "default": "A fresh new modern theme."
      },
      {
        "type": "image_picker",
        "id": "pwa_icon",
        "label": "PWA Icon"
      },
      {
        "type": "image_picker",
        "id": "pwa_maskable_icon",
        "label": "PWA Maskable Icon",
        "info": "This icon needs to fit within a variety of shapes and have a transparent background."
      },
      {
        "type": "header",
        "content": "Colors"
      },
      {
        "type": "color",
        "id": "pwa_theme_color",
        "label": "PWA Theme Color",
        "default": "#1c1c1c",
        "info": "Do not use dynamic content for this color, it will not work."
      },
      {
        "type": "color",
        "id": "pwa_background_color",
        "label": "PWA Background Color",
        "default": "#ffffff",
        "info": "Do not use dynamic content for this color, it will not work."
      },
      {
        "type": "header",
        "content": "Splash Screen"
      },
      {
        "type": "image_picker",
        "id": "pwa_splash_screen",
        "label": "PWA Splash Screen",
        "info": "This image will be displayed when the PWA is launched."
      }
    ]
  },
  {
    "name": "Branding",
    "settings": [
      {
        "type": "header",
        "content": "Assets"
      },
      {
        "type": "image_picker",
        "id": "desktop_logo",
        "label": "Desktop Logo"
      },
      {
        "type": "image_picker",
        "id": "mobile_logo",
        "label": "Mobile Logo"
      }
    ]
  },
  {
    "name": "Color Schemes",
    "settings": [
      {
        "type": "color_scheme_group",
        "id": "color_schemes",
        "definition": [
          {
            "type": "color",
            "id": "primary",
            "label": "Primary Color",
            "default": "#5382b8"
          },
          {
            "type": "color",
            "id": "secondary",
            "label": "Secondary Color",
            "default": "#989bd4"
          },
          {
            "type": "color",
            "id": "accent",
            "label": "Accent Color",
            "default": "#7970c4"
          },
          {
            "type": "color",
            "id": "background",
            "label": "Background Color",
            "default": "#e8e8e8"
          },
          {
            "type": "color_background",
            "id": "background_gradient",
            "label": "Background Gradient"
          },
          {
            "type": "color",
            "id": "text",
            "label": "Text Color",
            "default": "#333"
          }
        ],
        "role": {
          "background": {
            "solid": "background",
            "gradient": "background_gradient"
          },
          "text": "text",
          "primary_button": "primary",
          "on_primary_button": "text",
          "primary_button_border": "primary",
          "secondary_button": "secondary",
          "on_secondary_button": "text",
          "secondary_button_border": "secondary",
          "links": "accent",
          "icons": "text"
        }
      }
    ]
  },
  {
    "name": "Typography",
    "settings": [
      {
        "type": "font_picker",
        "id": "type_font_header",
        "label": "Header Font",
        "default": "inter_n6"
      },
      {
        "type": "font_picker",
        "id": "type_font_body",
        "label": "Body Font",
        "default": "inter_n4"
      }
    ]
  },
  {
    "name": "Currency Format",
    "settings": [
      {
        "type": "header",
        "content": "Currency Codes"
      },
      {
        "type": "checkbox",
        "id": "currency_code_enabled",
        "label": "Show currency codes",
        "info": "Cart and checkout prices always show currency codes. Example: $1.00 USD.",
        "default": true
      }
    ]
  }
]
